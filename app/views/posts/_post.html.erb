<div id="<%= dom_id post %>">
<% if post.user == current_user %>

  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= post.description %>
  </p>

  <div class="image">
  <%= link_to image_tag(post.image, style:"width:300px; height:300px"), post.image if post.image.attached? %> 

  <% end %>

</div>